<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_h4"
    >

    <LinearLayout
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_background_cardview"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/a8dp"

            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="6dp"
                    android:id="@+id/ivProductOnCart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/a100dp"
                    android:layout_weight="1"
                    android:src="@drawable/no_image"
                    />
                <Button
                    android:id="@+id/btnDeleteFromCart"
                    android:layout_margin="@dimen/a8dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:text="Eliminar del carrito"
                    android:background="@color/colorBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:fontFamily="@font/lato"
                    android:id="@+id/tvNameOnCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del producto"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:textColor="@color/negro"
                    android:layout_marginTop="@dimen/a8dp"
                    android:visibility="visible"
                    />
                <TextView
                    android:fontFamily="@font/lato"
                    android:id="@+id/tvDescriptionOnCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripcion del producto"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:textColor="@color/negro"
                    android:visibility="visible"
                    />
                <TextView
                    android:fontFamily="@font/lato"
                    android:id="@+id/tvPriceOnCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio del producto"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBackground"
                    android:visibility="visible"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/lato"
                        android:id="@+id/tvStockOnCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="@color/negro"
                        android:visibility="visible"
                        />
                    <Spinner
                        android:id="@+id/spinner_cantidad"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:spinnerMode="dialog"
                        />
                </LinearLayout>

                <TextView
                    android:fontFamily="@font/lato"
                    android:id="@+id/tvSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:gravity="start"
                    android:textSize="16sp"
                    android:textColor="@color/negro"
                    android:visibility="gone"
                    />
            </LinearLayout>


        </LinearLayout>
        <Button
            android:visibility="gone"
            android:layout_margin="@dimen/a8dp"
            android:id="@+id/btnPayment"
            android:background="@color/colorBackground"
            android:text="Pagar"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </Button>

    </LinearLayout>


</androidx.cardview.widget.CardView>