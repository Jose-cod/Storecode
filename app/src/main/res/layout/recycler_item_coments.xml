<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_h4"
    >

    <LinearLayout
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/a8dp"
        android:background="@drawable/shape_background_cardview"
        >


        <!--android:background="@drawable/btn_item_grid_marca"-->


        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:contentDescription="Imagen usuario"
            android:src="@drawable/ic_person"
        />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"

            android:layout_weight="1">
            <TextView
                android:layout_marginHorizontal="@dimen/a8dp"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:gravity="start"
                android:textSize="16sp"

                android:textColor="@color/negro"
                android:layout_marginTop="@dimen/a8dp"
                android:visibility="visible"
                />


            <TextView
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="@dimen/a8dp"
                android:fontFamily="@font/lato"
                android:id="@+id/tvComent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentario"

                android:gravity="start"
                android:textSize="16sp"
                android:textColor="@color/gris_oscuro"
                android:visibility="visible"
                />



        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>