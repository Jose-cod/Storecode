<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_h4"
    android:elevation="@dimen/a50dp"
    >

    <LinearLayout
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_background_cardview"
        android:elevation="@dimen/a20dp">

        <!--android:background="@drawable/btn_item_grid_marca"-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_h3"
            >

            <ImageView
                android:id="@+id/ivModelo"
                android:layout_width="0dp"
                android:layout_height="@dimen/a70dp"
                android:layout_weight="1"
                android:src="@drawable/logo_fondoazul"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/a10dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitulo"
                    android:fontFamily="@font/lato_regular_otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="left|center"
                    android:textSize="@dimen/a15dp"
                    android:textStyle="bold"
                    android:textColor="@color/negro"
                    />

                <TextView
                    android:fontFamily="@font/lato"
                    android:id="@+id/tvDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="left|top"
                    android:textSize="@dimen/a10dp"
                    android:textColor="@color/negro"
                    />

                <TextView
                    android:fontFamily="@font/lato"
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="left|top"
                    android:textSize="@dimen/a10dp"
                    android:textColor="@color/negro"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">



            <Button
                android:id="@+id/btnVerDetalle"
                android:layout_margin="@dimen/a8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:textColor="@color/white"
                android:text="Ver detalle"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAllCaps="false"
                ></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".15"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>